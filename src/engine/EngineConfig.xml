<EngineConfiguration>
    <!--    OgreSystem loader
        Some of the parameters:
        -ogreLogLeve = High (lot of info) | Low (poor info)
        -sceneManagerType = ST_GENERIC
                            ST_EXTERIOR_CLOSE
                            ST_EXTERIOR_FAR,
                            ST_EXTERIOR_REAL_FAR,
                            ST_INTERIOR
    -->
    <OgreSystemLoader resources="resources.cfg" plugins="plugins.cfg" ogre="ogre.cfg" ogreLogLevel="High" sceneManagerType="ST_GENERIC" />
    <!--    InputSystem loader
    -->
    <InputSystemLoader disableInputGrabbing="1" />
    <!-- OpenALLoader will be used to load the openal context using the specified
         device. If no device is specified (empty string) then we will use the
         default one.
     -->
    <OpenALLoader device="OpenAL Soft" />
    <ResourcesSystemLoader rootRscPath="./media" />
    <SoundSystemLoader rootRscPath="Multimedia/" />
    <VideoSystemLoader />
</EngineConfiguration>
